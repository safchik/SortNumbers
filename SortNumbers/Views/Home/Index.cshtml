@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Let's Play a Game!</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="PostNumbers" method="post" class="border p-4 rounded shadow">
                <div class="mb-3">
                    <label for="numbers" class="form-label">Enter whole numbers (comma-separated):</label>
                    <input type="text" id="numbers" name="numbers" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="sortOrder" class="form-label">Choose sorting order:</label>
                    <select id="sortOrder" name="sortOrder" class="form-select" required>
                        <option value="asc">Ascending</option>
                        <option value="desc">Descending</option>
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Sort</button>
                </div>
            </form>
        </div>
    </div>
</div>
