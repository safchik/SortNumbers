@model SortNumbers.ViewModels.AddSequenceViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Let's Play a Game!</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="PostNumbers" method="post" class="border p-4 rounded shadow">
                <div class="mb-3">
                    <label asp-for=Numbers class="form-label">Enter whole numbers (comma-separated):</label>
                    <input asp-for=Numbers type="text" class="form-control" required>
                    <span asp-validation-for="Numbers" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for=Ordering class="form-label">Choose sorting order:</label>
                    <select asp-for=Ordering class="form-select" required>
                        <option value="asc">Ascending</option>
                        <option value="desc">Descending</option>
                        <span asp-validation-for="Ordering"></span>
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Sort</button>
                </div>
            </form>
        </div>
    </div>
</div>
